                                            <ProgressBar x:Name="MaintenanceProgressBar" Minimum="0" Maximum="100" Height="6" Visibility="Collapsed" Margin="0,0,0,8"/>
                                            <TextBlock x:Name="MaintenanceStatusText" Text="" Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </ScrollViewer>
                        </Grid>

