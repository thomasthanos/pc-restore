                               VerticalAlignment="Center" Margin="0,0,0,0"
                               FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,16,0">
                        <Button x:Name="MinBtn" Style="{StaticResource TitleMinBtn}" Margin="0,0,8,0"/>
                        <Button x:Name="CloseBtn" Style="{StaticResource TitleCloseBtn}"/>
                    </StackPanel>
                </Grid>

                <!-- Sidebar: wrapped in ScrollViewer to enable scrolling when many items exist.  Hidden vertical bar for cleanliness. -->
                <ScrollViewer Grid.Row="1"
                              Grid.Column="0"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled"
                              PanningMode="VerticalOnly"
                              CanContentScroll="True">
                    <Grid x:Name="Sidebar">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/> <!-- Menu label -->
                            <RowDefinition Height="Auto"/> <!-- Profile -->
                            <RowDefinition Height="Auto"/> <!-- Install -->
                            <RowDefinition Height="Auto"/> <!-- Activate -->
                            <RowDefinition Height="Auto"/> <!-- Maintenance -->
                            <RowDefinition Height="Auto"/> <!-- Sites -->
                            <RowDefinition Height="Auto"/> <!-- Apps -->
                            <RowDefinition Height="Auto"/> <!-- Spotify -->
                            <RowDefinition Height="Auto"/> <!-- Password Manager -->
                            <RowDefinition Height="Auto"/> <!-- ChrisTitus -->
                            <RowDefinition Height="Auto"/> <!-- Sims -->
                            <RowDefinition Height="Auto"/> <!-- Info -->
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="16"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="1" x:Name="MenuLabel" Text="Menu" Foreground="{DynamicResource MutedText}" Margin="24,0,0,10" FontSize="12"/>
                        <StackPanel Grid.Row="2"  Margin="12,0,12,8"><Button x:Name="ProfileBtn"     Content="Profile"              Style="{StaticResource ActivePillButton}"/></StackPanel>
                        <StackPanel Grid.Row="3"  Margin="12,0,12,8"><Button x:Name="InstallBtn"     Content="Install Apps"         Style="{StaticResource PillButton}"/></StackPanel>
                        <StackPanel Grid.Row="4"  Margin="12,0,12,8"><Button x:Name="ActivateBtn"    Content="Activate/Autologin"   Style="{StaticResource PillButton}"/></StackPanel>
                        <StackPanel Grid.Row="5"  Margin="12,0,12,8"><Button x:Name="MaintenanceBtn" Content="System Maintenance"   Style="{StaticResource PillButton}"/></StackPanel>
                        <StackPanel Grid.Row="6"  Margin="12,0,12,8"><Button x:Name="SitesBtn"       Content="Sites"                Style="{StaticResource PillButton}"/></StackPanel>
                        <StackPanel Grid.Row="7"  Margin="12,0,12,8"><Button x:Name="AppsBtn"        Content="Apps"                 Style="{StaticResource PillButton}"/></StackPanel>
                        <!-- New buttons placed above Info -->
                        <StackPanel Grid.Row="8"  Margin="12,0,12,8"><Button x:Name="SpotifyBtn"          Content="Spotify"           Style="{StaticResource PillButton}"/></StackPanel>
                        <StackPanel Grid.Row="9"  Margin="12,0,12,8"><Button x:Name="PasswordManagerBtn" Content="Password Manager"  Style="{StaticResource PillButton}"/></StackPanel>
                        <StackPanel Grid.Row="10" Margin="12,0,12,8"><Button x:Name="ChrisTitusBtn"      Content="ChrisTitus"        Style="{StaticResource PillButton}"/></StackPanel>
                        <StackPanel Grid.Row="11" Margin="12,0,12,8"><Button x:Name="SimsBtn"           Content="Sims"              Style="{StaticResource PillButton}"/></StackPanel>
                        <!-- Info button moved to a lower row (12) -->
                        <StackPanel Grid.Row="12" Margin="12,0,12,8"><Button x:Name="InfoBtn"        Content="Info"                 Style="{StaticResource PillButton}"/></StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Pages -->
                <Border x:Name="ContentShell" Grid.Row="1" Grid.Column="1" Background="{DynamicResource ContentBg}" CornerRadius="16,0,0,0">
                    <Grid>
                        <!-- Profile -->
                        <Grid x:Name="ProfileContent" Visibility="Visible">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <StackPanel Margin="24">
                                    <TextBlock x:Name="ProfileTitle" Text="Ρυθμίσεις Προφίλ" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>

                                    <!-- Display -->
                                    <Border CornerRadius="12" Background="{DynamicResource CardBg}" Padding="16" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock x:Name="DisplayTitle" Text="Ρυθμίσεις Οθόνης" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                            <TextBlock x:Name="ResolutionLabel" Text="Ανάλυση παραθύρου:" Foreground="{DynamicResource MutedText}" FontSize="14" Margin="0,0,0,6"/>
                                            <ComboBox x:Name="ResolutionCombo"
                                                      MinWidth="0"
                                                      HorizontalAlignment="Left"
                                                      SelectedIndex="2"
                                                      Margin="0,0,0,12"
                                                      Style="{StaticResource ModernComboBox}"
                                                      ItemContainerStyle="{StaticResource ModernComboBoxItem}">
                                              <!-- Provide 480p option as the first entry.  Default selection index has been
                                                   shifted to 2 to keep 1080p selected by default. -->
                                              <ComboBoxItem Content="480p (854x480)"/>
                                              <ComboBoxItem Content="720p (1280x720)"/>
                                              <ComboBoxItem Content="1080p (1920x1080)"/>
                                            </ComboBox>

                                            <TextBlock x:Name="ThemeLabel" Text="Θέμα:" Foreground="{DynamicResource MutedText}" FontSize="14" Margin="0,0,0,6"/>
                                            <CheckBox x:Name="ThemeToggle" IsChecked="True" Style="{StaticResource Switch}" Margin="0,0,0,12">
                                                <TextBlock x:Name="ThemeToggleLabel" Text="Σκοτεινό"/>
                                            </CheckBox>
                                        </StackPanel>
                                    </Border>

                                    <!-- Personalization -->
                                    <Border CornerRadius="12" Background="{DynamicResource CardBg}" Padding="16" Margin="0,0,0,16">
                                      <StackPanel>
                                        <TextBlock x:Name="PersonalizationTitle" Text="Εξατομίκευση" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                        <TextBlock x:Name="UsernameLabel" Text="Όνομα χρήστη:" Foreground="{DynamicResource MutedText}" FontSize="14" Margin="0,0,0,6"/>
                                        <TextBox x:Name="UserName" HorizontalAlignment="Left" Padding="4,2" Style="{StaticResource ModernTextBox}"/>

                                        <TextBlock x:Name="LanguageLabel" Text="Γλώσσα:" Foreground="{DynamicResource MutedText}" FontSize="14" Margin="12,12,0,6"/>
                                        <ComboBox x:Name="LanguageCombo"
                                                  MinWidth="0"
                                                  HorizontalAlignment="Left"
                                                  SelectedIndex="0"
                                                  Margin="0,0,0,12"
                                                  Style="{StaticResource ModernComboBox}"
                                                  ItemContainerStyle="{StaticResource ModernComboBoxItem}">
                                          <ComboBoxItem Content="Ελληνικά" Tag="el"/>
                                          <ComboBoxItem Content="English"  Tag="en"/>
                                        </ComboBox>
                                      </StackPanel>
                                    </Border>

                                    <!-- Notifications -->
                                    <Border CornerRadius="12" Background="{DynamicResource CardBg}" Padding="16">
                                        <StackPanel>
                                            <TextBlock x:Name="NotificationsTitle" Text="Ειδοποιήσεις" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                                                <CheckBox x:Name="NotificationsToggle" IsChecked="True" Style="{StaticResource Switch}">
                                                    <TextBlock x:Name="NotifEnabledLabel" Text="Enable notifications:"/>
                                                </CheckBox>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                                                <CheckBox x:Name="SoundToggle" IsChecked="True" Style="{StaticResource Switch}">
                                                    <TextBlock x:Name="SoundLabel" Text="Notification sound:"/>
                                                </CheckBox>
                                            </StackPanel>

                                            <!-- Buttons row -->
                                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                                <Button x:Name="TestNotifBtn" Content="Test notification" Style="{StaticResource OutlineButton}" Margin="0,0,12,0"/>
                                                <Button x:Name="SaveProfileBtn" x:FieldModifier="public" Content="Αποθήκευση Ρυθμίσεων" Style="{StaticResource PrimaryButton}"/>
                                                <Button x:Name="ResetBtn" Content="Επαναφορά" Style="{StaticResource OutlineButton}" Margin="12,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <!-- Other pages -->
                        <Grid x:Name="InstallContent" Visibility="Collapsed">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <StackPanel Margin="16">
                                    <TextBlock x:Name="InstallTitle" Text="Install Apps" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <TextBlock x:Name="InstallDesc" Text="Επίλεξε εφαρμογές για λήψη &amp; εγκατάσταση" Foreground="{DynamicResource MutedText}" TextWrapping="Wrap" Margin="0,0,0,16"/>
                                    
                                    <!--
                                        Adjust the layout of the install page so that the left and right
                                        list boxes (available and selected apps) don't take up the entire
                                        horizontal space on wide resolutions such as 1080p.  By giving the
                                        two outer columns a fixed width and centering the whole grid,
                                        the middle column (containing the add/remove buttons) will have
                                        adequate breathing room and the buttons will appear at a more
                                        appropriate width.  The width chosen here (350) offers a good
                                        balance between list visibility and overall layout proportion.
                                    -->
                                    <!--
                                        Responsive three-column layout for the install page.
                                        On narrow resolutions (e.g. 480p) the two list columns will
                                        shrink down to their minimum widths but remain visible. On
                                        mid-sized and wide resolutions, they expand symmetrically up
                                        to a reasonable maximum. The outer columns use star sizing
                                        with explicit MinWidth/MaxWidth constraints, while the
                                        buttons column stays fixed. The outer Grid also caps its
                                        overall width to avoid overly stretched layouts on very large
                                        screens.
                                    -->
                                    <Grid HorizontalAlignment="Stretch" Margin="0">
                                        <Grid.ColumnDefinitions>
                                            <!-- flexible columns for lists: fill available space but keep a minimum width -->
                                            <ColumnDefinition Width="*" MinWidth="160" />
                                            <!-- central column auto-sized to content so buttons are fully visible and centered -->
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" MinWidth="160" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Available -->
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Διαθέσιμες" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                            <ListBox x:Name="AvailableApps" Height="260"
                                                     Style="{StaticResource InstallListBox}"
                                                     ItemContainerStyle="{StaticResource InstallListBoxItem}"
                                                     Foreground="{DynamicResource TextBrush}"
                                                     SelectionMode="Extended"/>
                                        </StackPanel>

                                        <!-- Middle buttons -->
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8">
                                            <Button x:Name="BtnAdd" Content="⟶ Προσθήκη"
                                                    Style="{StaticResource OutlineButton}"
                                                    Padding="16,8"
                                                    Margin="0,0,0,8"/>
                                            <Button x:Name="BtnRemove" Content="⟵ Αφαίρεση"
                                                    Style="{StaticResource OutlineButton}"
                                                    Padding="16,8"/>
                                        </StackPanel>

                                        <!-- Selected -->
                                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                            <TextBlock Text="Επιλεγμένες" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                            <ListBox x:Name="SelectedApps" Height="260"
                                                     Style="{StaticResource InstallListBox}"
                                                     ItemContainerStyle="{StaticResource InstallListBoxItem}"
                                                     Foreground="{DynamicResource TextBrush}"
                                                     SelectionMode="Extended"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Footer -->
                                    <StackPanel Orientation="Vertical" Margin="0,12,0,0">
                                        <ProgressBar x:Name="DownloadProgressBar"
                                                     Style="{StaticResource InstallProgressBar}"
                                                     Minimum="0" Maximum="100" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="StatusText" Margin="0,0,0,12" Opacity="0.85"/>
                                        <Button x:Name="BtnDownload" Content="Λήψη &amp; Εγκατάσταση" Width="190" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <Grid x:Name="ActivateContent" Visibility="Collapsed">
                            <!-- Use a ScrollViewer so content is scrollable on small windows -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <StackPanel Margin="24">
                                    <!-- Title and description -->
                                    <TextBlock x:Name="ActivateTitle" Text="Activate / Autologin" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <TextBlock x:Name="ActivateDesc" Text="Ρυθμίσεις αυτόματης σύνδεσης και ενεργοποιήσεων." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap" Margin="0,0,0,16"/>

                                    <!-- Two cards layout: AutoLogin (left) and Activate (right) -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="32"/> <!-- spacing -->
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- AutoLogin card -->
                                        <Border Grid.Column="0" Background="{DynamicResource CardBg}" CornerRadius="12" Padding="16">
                                            <StackPanel>
                                                <Border x:Name="AutoLoginImageBorder" Height="160" CornerRadius="12" Margin="0,0,0,12" ClipToBounds="True" HorizontalAlignment="Stretch" />
                                                <Button x:Name="AutoLoginBtn" Content="Auto Login" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Activate Windows card -->
                                        <Border Grid.Column="2" Background="{DynamicResource CardBg}" CornerRadius="12" Padding="16">
                                            <StackPanel>
                                                <Border x:Name="ActivateImageBorder" Height="160" CornerRadius="12" Margin="0,0,0,12" ClipToBounds="True" HorizontalAlignment="Stretch" />
                                                <Button x:Name="WinActivateBtn" Content="Activate Windows" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- Progress indicator and status text -->
                                    <ProgressBar x:Name="ActivateProgressBar" Minimum="0" Maximum="100"
                                                 Height="8" Visibility="Collapsed"
                                                 Margin="0,0,0,8"
                                                 Foreground="{DynamicResource AccentBrush}"/>
                                    <TextBlock x:Name="ActivateStatusText" Text="" Opacity="0.85"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <Grid x:Name="MaintenanceContent" Visibility="Collapsed">
                            <!-- Hidden placeholders for i18n keys; the script references these names. Do not display them. -->
                            <TextBlock x:Name="MaintenanceTitle" Visibility="Collapsed"/>
                            <TextBlock x:Name="MaintenanceDesc"  Visibility="Collapsed"/>
                            <!-- Modern maintenance layout: two cards on first row, one card spanning full width on second row, and command output block -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <Grid Margin="24" HorizontalAlignment="Center" MaxWidth="900">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Delete Temporary Files card -->
                                    <Border Grid.Row="0" Grid.Column="0" Background="{DynamicResource CardBg}" CornerRadius="12" Padding="16" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Καθαρισμός Temp" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Διαγράφει τα προσωρινά αρχεία (%temp%, C:\\Windows\\Temp, Prefetch)." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap" Margin="0,0,0,12"/>
                                            <Button x:Name="DeleteTempBtn" Content="Καθαρισμός Προσωρινών" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </Border>
                                    <!-- System Scan &amp; Repair card -->
                                    <Border Grid.Row="0" Grid.Column="2" Background="{DynamicResource CardBg}" CornerRadius="12" Padding="16" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="System Scan &amp; Repair" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Εκτελεί SFC και DISM για έλεγχο και αποκατάσταση των αρχείων συστήματος." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap" Margin="0,0,0,12"/>
                                            <Button x:Name="SystemScanBtn" Content="Έναρξη Ελέγχου/Επισκευής" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch"/>
                                        </StackPanel>
