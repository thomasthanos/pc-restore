                <DropShadowEffect BlurRadius="22" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Title Bar -->
                <Grid x:Name="TitleBar" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,0">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1C1F26" Offset="0"/>
                            <GradientStop Color="#1A1D24" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="TitleIcon" Grid.Column="0" Width="24" Height="24" Margin="16,0,8,0" VerticalAlignment="Center"/>
