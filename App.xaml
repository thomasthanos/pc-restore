                                <StackPanel Margin="24">
                                    <TextBlock x:Name="SpotifyTitle" Text="Spotify" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <!-- Replace the old description and single Spotify button with controls to manage Spicetify/Spotify.
                                         Use unique x:Name values so they don't clash with existing controls. -->
                                    <!-- Use a modern card layout with shadow and a grid to arrange the Spicetify controls -->
                                    <Border Background="{DynamicResource CardBg}" BorderBrush="{DynamicResource BorderBr}" BorderThickness="1" CornerRadius="12" Padding="16" Margin="0,0,0,8">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Button Grid.Row="0" Grid.Column="0"
                                                    x:Name="SpicetifyInstallBtn"
                                                    Content="Install Spicetify"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Margin="0,0,8,8" />
                                            <Button Grid.Row="0" Grid.Column="1"
                                                    x:Name="SpicetifyUninstallBtn"
                                                    Content="Uninstall Spicetify"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Margin="0,0,0,8" />
                                            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                    x:Name="SpicetifyFullUninstallBtn"
                                                    Content="Full Uninstall Spotify"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Margin="0,0,0,8" />
                                            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                       x:Name="SpicetifyStatusLabel"
                                                       Text="Ready."
                                                       Foreground="{DynamicResource MutedText}"
                                                       TextWrapping="Wrap" />
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <Grid x:Name="PasswordManagerContent" Visibility="Collapsed">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <!-- Κοντέινερ πλήρους πλάτους: γεμίζει τον διαθέσιμο χώρο σε όλες τις αναλύσεις -->
                                <Grid Margin="24">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header (τίτλος & περιγραφή) -->
                                    <StackPanel Grid.Row="0" Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                                            <Path Width="20" Height="20" Stretch="Uniform" Margin="0,0,8,0"
                                                  Fill="{DynamicResource Primary}"
                                                  Data="M12,17 L12,11 C12,8.24 14.24,6 17,6 C19.76,6 22,8.24 22,11 L22,17 L24,17 C25.1046,17 26,17.8954 26,19 L26,28 C26,29.1046 25.1046,30 24,30 L10,30 C8.89543,30 8,29.1046 8,28 L8,19 C8,17.8954 8.89543,17 10,17 L12,17 Z M20,17 L14,17 L14,11 C14,9.34 15.34,8 17,8 C18.66,8 20,9.34 20,11 L20,17 Z"/>
                                            <TextBlock x:Name="PasswordManagerTitle"
                                                       Text="Password Manager"
                                                       FontSize="24" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <TextBlock x:Name="PasswordManagerDesc"
                                                   Text="Ασφαλής διαχείριση κωδικών πρόσβασης μέσα από το πρόγραμμα."
                                                   Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                    </StackPanel>

                                                                        <!-- Κάρτα: περιεχόμενο με διακριτικό visual που δεν επηρεάζει τη διάταξη -->
                                    <Border Grid.Row="2"
                                            Background="{DynamicResource CardBg}"
                                            BorderBrush="{DynamicResource BorderBr}"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="18">
                                        <!-- Το Grid χρησιμοποιείται για layering: το διακοσμητικό οπτικό στοιχείο βρίσκεται στο παρασκήνιο και δεν καταλαμβάνει χώρο, ενώ το περιεχόμενο τοποθετείται πάνω από αυτό -->
                                        <Grid ClipToBounds="True">
                                            <!-- Διακοσμητική ελλειπτική μορφή που θολώνει ελαφρά και γεμίζει τον χώρο στα δεξιά σε υψηλές αναλύσεις. Στο μικρό πλάτος κόβεται χωρίς να επηρεάζει το περιεχόμενο. -->
                                            <Ellipse Width="420"
                                                     Height="420"
                                                     Fill="#0F4A8BFF"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Top"
                                                     Margin="0,-180,-120,0">
                                                <Ellipse.Effect>
                                                    <BlurEffect Radius="45"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <!-- Διακοσμητικό εικονίδιο λουκέτου στο παρασκήνιο. Τοποθετείται κάτω δεξιά για να δίνει βάρος σε μεγάλες αναλύσεις -->
                                            <Path Data="M12,17 L12,11 C12,8.24 14.24,6 17,6 C19.76,6 22,8.24 22,11 L22,17 L24,17 C25.1046,17 26,17.8954 26,19 L26,28 C26,29.1046 25.1046,30 24,30 L10,30 C8.89543,30 8,29.1046 8,28 L8,19 C8,17.8954 8.89543,17 10,17 L12,17 Z M20,17 L14,17 L14,11 C14,9.34 15.34,8 17,8 C18.66,8 20,9.34 20,11 L20,17 Z"
                                                  Stretch="Uniform"
                                                  Fill="#204A8BFF"
                                                  Width="160"
                                                  Height="160"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Bottom"
                                                  Margin="0,0,-40,-40"/>
                                            <!-- Περιεχόμενο κάρτας: τίτλος, κουμπί και περιγραφή -->
                                            <StackPanel Orientation="Vertical"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        Margin="0">
                                                <TextBlock Text="Γρήγορη εκκίνηση"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,8"/>
                                                <Button x:Name="OpenPasswordManagerBtn"
                                                        Content="Άνοιγμα Password Manager"
                                                        Style="{StaticResource PrimaryButton}"
                                                        Height="42"
                                                        Width="240"
                                                        HorizontalAlignment="Left"
                                                        Margin="0,0,0,8"/>
                                                <TextBlock Text="Ανοίγει σε 1400×800, εμφανίζεται on‑top για 2″ και επαναφέρει την εφαρμογή όταν κλείσει."
                                                           Foreground="{DynamicResource MutedText}"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"
                                                           Width="280"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </ScrollViewer>
                        </Grid>

                        <!-- ChrisTitus Page -->
                        <Grid x:Name="ChrisTitusContent" Visibility="Collapsed">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <!-- Container similar to Password Manager page -->
                                <Grid Margin="24">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!-- Header (no decorative icon) -->
                                    <StackPanel Grid.Row="0" Orientation="Vertical">
                                        <TextBlock x:Name="ChrisTitusTitle"
                                                   Text="ChrisTitus Tools"
                                                   FontSize="24"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                    <TextBlock x:Name="ChrisTitusDesc"
                                                   Text="Εργαλείο για διάγνωση και επιδιόρθωση Windows."
                                                   Foreground="{DynamicResource MutedText}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <!-- Action bar: full-width left aligned -->
                                    <Border Grid.Row="2"
                                            Background="{DynamicResource CardBg}"
                                            BorderBrush="{DynamicResource BorderBr}"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="16"
                                            HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Γρήγορη εκκίνηση"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,8"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="12"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Button -->
                                                <Button x:Name="RunChrisTitusBtn"
                                                        Content="Εκτέλεση εργαλείου"
                                                        Style="{StaticResource PrimaryButton}"
                                                        Height="40"
                                                        Width="240"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Grid.Column="0"/>
                                                <!-- Description -->
                                                <TextBlock Grid.Column="2"
                                                           Text="Ανοίγει κονσόλα PowerShell στο κέντρο."
                                                           Foreground="{DynamicResource MutedText}"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </ScrollViewer>
                        </Grid>

                        <!-- Sims Page -->
                        <Grid x:Name="SimsContent" Visibility="Collapsed">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <StackPanel Margin="24">
                                    <TextBlock x:Name="SimsTitle" Text="Sims DLC Tools" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <TextBlock x:Name="SimsDesc" Text="Βοηθητικά εργαλεία για το Sims 4. Κατεβάζει και εγκαθιστά EA-DLC-Unlocker και updater." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap" Margin="0,0,0,16"/>
                                    <Button x:Name="RunSimsDlcBtn" Content="Εκτέλεση Sims Εργαλείων" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <!-- Info Panel -->
                        <Grid x:Name="InfoContent" Visibility="Collapsed">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
                                <StackPanel Margin="24">
                                    <TextBlock x:Name="InfoTitle" Text="Πληροφορίες" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                    <TextBlock x:Name="InfoDesc" Text="Η εφαρμογή συγκεντρώνει καθημερινές εργασίες σε ένα σημείο — για να σου κάνει τη ζωή πιο εύκολη." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap" Width="560" Margin="0,0,0,16"/>

                                    <!-- Module Descriptions -->
                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Password Manager" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Ασφαλές εργαλείο που ανοίγει web-based password manager μέσα από WebView2. Ελέγχει αν υπάρχει runtime και καθοδηγεί για εγκατάσταση. Αποθηκεύει δεδομένα σε %AppData%\Kolokithes A.E\WebView2UserData." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Sims DLC Tools" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Εργαλεία για Sims 4. Κατεβάζει και εγκαθιστά EA-DLC-Unlocker και updater. Εκτελεί scripts και δείχνει μηνύματα επιτυχίας/σφάλματος." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Windows Utilities" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Δύο βασικά κουμπιά: Auto Login (κατεβάζει auto login.exe) και Activate (τρέχει activate.bat). Τα αρχεία σβήνονται μετά την εκτέλεση." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Public Installers" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Εργαλεία που κατεβάζουν και εκτελούν public installers από URL. Εμφανίζουν προειδοποιήσεις και progress." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Clear Temporary Files" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Καθαρίζει προσωρινά αρχεία από σύστημα/εφαρμογή. Εμφανίζει αποτελέσματα καθαρισμού και σφάλματα." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Crack Sites Manager" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Παράθυρο με ενσωματωμένο browser για πρόσβαση σε sites. Διαχειρίζεται links και προστατεύει από λάθη." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Multitool Panel" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Περιέχει μικρά βοηθητικά εργαλεία (installers, system actions). Δουλεύει ως hub για λειτουργίες." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource InfoCard}">
                                        <StackPanel>
                                            <TextBlock Text="Custom Message Box" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <TextBlock Text="Προσαρμοσμένο παράθυρο ειδοποιήσεων με icons (Info, Success, Error, Danger, Question). Υποστηρίζει λεπτομέρειες σφάλματος, copy στο clipboard, always-on-top." Foreground="{DynamicResource MutedText}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Version and Copyright -->
                                    <TextBlock x:Name="VersionLabel" Text="Έκδοση: 2.0.0" Margin="0,20,0,8" Foreground="{DynamicResource MutedText}"/>
                                    <TextBlock x:Name="CopyrightLabel" Text="© 2025 Make Your Life Easier" Foreground="{DynamicResource MutedText}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Toast host (bottom-right) / modern -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" IsHitTestVisible="False">
                  <Border x:Name="ToastHost" CornerRadius="12"
                          Background="{DynamicResource ToastBg}" BorderBrush="{DynamicResource ToastBorder}" BorderThickness="1"
                          Padding="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,18,18"
                          Visibility="Collapsed" SnapsToDevicePixels="True" MaxWidth="460">
                    <Border.Effect>
                      <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
                    </Border.Effect>
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="6"/>
                      </Grid.RowDefinitions>
                      <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="20" Height="20" CornerRadius="10" Margin="2,0,8,0" Background="{DynamicResource ToastAccent}">
                          <TextBlock Text="i" FontWeight="Bold" Foreground="White" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="ToastText" Text="Notification" Foreground="{DynamicResource TextBrush}" 
                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                      </StackPanel>
                      <ProgressBar x:Name="ToastProgress" Grid.Row="1" Minimum="0" Maximum="100" Value="0"
                                   Style="{StaticResource ToastProgressBar}"/>
                    </Grid>
                  </Border>
                </Grid>
            </Grid>
        </Border>
    
</Window>